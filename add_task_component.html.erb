<!-- app/components/add_task_component.html.erb -->

<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter task title" %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Enter task description" %>
  </div>

  <%= form.submit "Add Task" %>
<% end %>
